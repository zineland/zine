{% extends "base.jinja" %}

{% block content %}
    {% for season in seasons | reverse %}
        <div class="p-4 md:p-8 mx-4 my-6 bg-white
                    shadow-xl shadow-slate-700/10 ring-1 ring-gray-900/5">
            <div class="text-2xl text-center m-4">
                <a class="before:block before:absolute before:-inset-1 before:-skew-y-3 before:bg-primary relative inline-block
                         transition sm:hover:scale-110 duration-500"
                   href="/{{ season.slug }}">
                    <div class="first-letter:text-4xl first-letter:font-bold relative text-main px-10">{{ season.title }}</div>
                </a>
            </div>
            <div class="flex flex-wrap flex-col sm:flex-row sm:justify-evenly items-center">
                {% for article in article_map[season.number] %}
                    <div class="mt-8 sm:mx-2 sm:max-w-md w-full transition ease-in-out sm:hover:scale-105 duration-500 hover:border border-gray-200">
                        <a href="/{{ season.slug }}/{{ article.slug }}">
                            <div class="relative mx-auto ">
                                <img class="z-0 w-full max-h-52 md:max-h-56 object-cover" src="{{ article.cover }}" alt="{{ article.title }}"/>
                            </div>
                            <div class="m-3 text-xl text-black ">
                                <div class="font-bold line-clamp-2">
                                    {{ article.title }}
                                </div>
                                <div class="mt-2 text-base text-gray-500">
                                    {{ article.pub_date }}
                                </div>
                            </div>
                        </a>
                    </div>
                {% endfor %}
                <div class="mt-8 sm:mx-2 flex w-full mx-auto ">
                    <a href="/{{ season.slug }}" class="p-3 px-12 mx-auto my-8 bg-primary text-main text-sm font-bold rounded transition sm:hover:scale-110 duration-500">
                        {{ fluent(key = "view-more") }}
                    </a>
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock content %}